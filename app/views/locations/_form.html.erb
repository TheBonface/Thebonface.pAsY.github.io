<%= form_for(location) do |f| %>

<div class="row">
<div class="col-md-6 col-md-offset-3">

  <% if location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
      <% location.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :estate %>
    <%= f.text_field :address  , class: 'form-control'  %>
  </div>

  <div class="field">
    <%= f.label :latitude %>
    <%= f.text_field :latitude  , class: 'form-control', id:"disabledInput" , placeholder:"your latitude will be generated .." %>
  </div>

  <div class="field">
    <%= f.label :longitude %>
    <%= f.text_field :longitude  , class: 'form-control', id:"disabledInput", placeholder:"your longitude will be generated .." %>
  </div>


  <div class="field">
    <%= f.label :country %>
    <%= f.text_field :country  , class: 'form-control'  %>
  </div>

  <div class="field">
      <%= f.label :county %>
    <%= f.text_field :county , class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :street_name %>
    <%= f.text_field :street_name , class: 'form-control' %>
  </div>


  <div class="field">
    <%= f.label :plot_number %>
    <%= f.text_field :plot_number , class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :door_number %>
    <%= f.text_field :door_number , class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :zipcode %>
    <%= f.text_field :zipcode , class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Create Location", class: "btn btn-success" %>
  </div>
<% end %>
</div>
</div>
